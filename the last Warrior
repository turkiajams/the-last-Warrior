class Personaje:
    def __init__(self, nombre):
        self.nombre = nombre
        self.vida = 100
        self.energia = 50
        self.ataque = 25
        self.defensa = 40
        self.nivel = 1
        self.experiencia = 0
        self.experiencia_necesaria = 100
    def aumentar_nivel(self):
        self.nivel += 1
        self.vida += 10
        self.energia += 5
        self.ataque += 5
        self.defensa += 5
        self.experiencia_necesaria *= 1.5
        self.experiencia = 0
    def recibir_ataque(self, enemigo):
        defensa_efectiva = self.defensa - (self.defensa // 20) * 3
        dano = enemigo.ataque - defensa_efectiva
        if dano < 0:
            dano = 0
        self.vida -= dano
        if self.vida < 0:
            self.vida = 0    
class acciones:
     def atacar(self, enemigo):
        dano = self.ataque - enemigo.defensa
        if dano < 0:
            dano = 0
        enemigo.vida -= dano
        self.energia -= 10
        if enemigo.vida < 0:
            enemigo.vida = 0
         