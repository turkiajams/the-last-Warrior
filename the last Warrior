class Personaje:
    def __init__(self, nombre, salud, ataque, defensa):
        self.nombre = nombre
        self.salud = salud
        self.ataque = ataque
        self.defensa = defensa
        self.objetos_equipados = {
            "Arma": None,
            "Casco": None,
            "Armadura": None,
            "Botas": None,
            "Escudo": None,
            "Daga": None
        }

    def equipar_objeto(self, objeto):
        if objeto.tipo in self.objetos_equipados:
            if self.objetos_equipados[objeto.tipo] is not None:
                self.desequipar_objeto(self.objetos_equipados[objeto.tipo])
            self.objetos_equipados[objeto.tipo] = objeto
            self.ataque += objeto.bonus_ataque
            self.defensa += objeto.bonus_defensa

    def desequipar_objeto(self, objeto):
        if objeto.tipo in self.objetos_equipados:
            if self.objetos_equipados[objeto.tipo] == objeto:
                self.objetos_equipados[objeto.tipo] = None
                self.ataque -= objeto.bonus_ataque
                self.defensa -= objeto.bonus_defensa

class Objeto:
    def __init__(self, nombre, tipo, bonus_ataque, bonus_defensa):
        self.nombre = nombre
        self.tipo = tipo
        self.bonus_ataque = bonus_ataque
        self.bonus_defensa = bonus_defensa